<h2>My profile:</h2>

<p>
    <img src="{{user.profilePictureURL}}" alt="Profile Picture of {{user.username}}">
    username: {{user.username}}
    first name: {{user.firstName}}
    last name: {{user.lastName}}
</p>

<p>
    email: {{user.email}}
</p>


<form action="" method="POST" enctype="multipart/form-data">
    <h3>Edit your data</h3>
    <div>
        <label for="username">Username:</label>
        <input name="username" type="text" value="{{user.username}}">
    </div>
    <div>
        <label for="email">Email:</label>
        <input name="email" type="email" value="{{user.email}}">
    </div>
    <div>
        <label for="firstName">First Name:</label>
        <input name="firstName" type="text" value="{{user.firstName}}">
    </div>
    <div>
        <label for="lastName">Last Name:</label>
        <input name="lastName" type="text" value="{{user.lastName}}">
    </div>
    <div>
        <label for="password">New Password</label>
        <input type="password" name="password">
        <label for="passwordConfirmation">New Password (repeat)</label>
        <input type="password" name="passwordConfirmation">
    </div>
    <div>
        <label for="image-url">Profile Picture:</label>
        <input type="file" name="image-url">
        <img id="preview" src="" alt="Preview of selected picture" width="200px" style="display: none;">
    </div>
    <button>Save</button>
</form>

<script src="/js/preview.js" type="module"></script>