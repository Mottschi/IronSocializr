<div id="form">
  <h2>Sign Up</h2>
  <form action="/auth/signup" method="POST" enctype="multipart/form-data">
  {{log newUser}}
    <p>
      <label> Username:
        <input type="text" name="username" placeholder="Your username" {{#if newUser}}value="{{newUser.username}}"{{/if}}/>
      </label>
    </p>

    <p>
      <label> First Name:
        <input type="text" name="firstName" placeholder="Your first name" {{#if newUser}}value="{{newUser.firstName}}"{{/if}}/>
      </label>
    </p>

    <p>
      <label> Last Name:
        <input type="text" name="lastName" placeholder="Your last name" {{#if newUser}}value="{{newUser.lastName}}"{{/if}}/>
      </label>    
    </p>

    <p>
      <label> Email:
        <input type="email" name="email" placeholder="Your email" {{#if newUser}}value="{{newUser.email}}"{{/if}}/>
      </label>
    </p>


    <p>
      <label> Password:
        <input type="password" name="password" placeholder="Your password" />
      </label>    
    </p>


    <p>
      <label> Password (repeat):
        <input type="password" name="passwordConfirmation" placeholder="Your password (repeat)" />
      </label>
    </p>

    <p>
      <label for="image-url">Profile Picture:
        <input type="file" name="image-url">
        <img id="profile-picture-preview" src="" alt="Preview of selected picture" width="200px" style="display: none;">
      </label>
    </p>

    <button type="submit">Sign Up</button>

    {{#if errorMessages}}
      <ul class="error">
        {{#each errorMessages}}
          <li>{{this}}</li>
        {{/each}}
      </ul>
    {{/if}}
  </form>
</div>